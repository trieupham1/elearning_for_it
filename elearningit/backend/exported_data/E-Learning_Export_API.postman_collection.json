	"info": {
		"_postman_id": "elearning-export-api-2025",
		"name": "E-Learning Export API",
		"description": "Collection for exporting MongoDB data from E-Learning platform.\n\nBefore using:\n1. Login via Auth/Login endpoint\n2. Copy the token from response\n3. Set {{token}} variable in Postman environment\n\nOr use the pre-request script to auto-login!",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Auth",
			"item": [
				{
					"name": "Login (Instructor)",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"// Auto-save token to environment",
									"if (pm.response.code === 200) {",
									"    const response = pm.response.json();",
									"    pm.environment.set('token', response.token);",
									"    console.log('✅ Token saved to environment');",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"username\": \"instructor1\",\n    \"password\": \"password123\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/auth/login",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"api",
								"auth",
								"login"
							]
						},
						"description": "Login as instructor to get authentication token.\nToken is automatically saved to environment variable."
					},
					"response": []
				}
			]
		},
